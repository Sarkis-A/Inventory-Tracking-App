<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <!-- Group name -->
        <TextView
            android:id="@+id/textGroupName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorPrimary"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/imageChevron"
            app:layout_constraintHorizontal_bias="0" />

        <!-- Chevron (tap hint) -->
        <ImageView
            android:id="@+id/imageChevron"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_chevron_right"
            android:contentDescription="@string/back_button"
            android:importantForAccessibility="no"
            app:layout_constraintTop_toTopOf="@id/textGroupName"
            app:layout_constraintBottom_toBottomOf="@id/textGroupName"
            app:layout_constraintEnd_toEndOf="parent"
            app:tint="?attr/colorSecondary" />

        <!-- Role label -->
        <TextView
            android:id="@+id/textRole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textSize="12sp"
            android:textColor="?attr/colorSecondary"
            app:layout_constraintTop_toBottomOf="@id/textGroupName"
            app:layout_constraintStart_toStartOf="@id/textGroupName" />

        <!-- Optional description/status -->
        <TextView
            android:id="@+id/textGroupDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textColor="?attr/colorOnBackground"
            app:layout_constraintTop_toBottomOf="@id/textRole"
            app:layout_constraintStart_toStartOf="@id/textGroupName"
            app:layout_constraintEnd_toStartOf="@id/imageChevron"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
